# short-description: Create an EFI disk image for genericx86*
# long-description: Creates a partitioned EFI disk image for genericx86* machines
part --source aos-bootimg-efi --sourceparams="loader=grub-efi,initrd=core-image-tiny-initramfs-genericx86-64.cpio.gz,version=${BOARD_BOOT_VERSION}" --ondisk hda --label msdos --active --align 1024 --size 128M
part --source aos-bootimg-efi --sourceparams="loader=grub-efi,initrd=core-image-tiny-initramfs-genericx86-64.cpio.gz,version=${BOARD_BOOT_VERSION}" --ondisk hda --label msdos --align 1024 --size 128M
part / --source rootfs --ondisk hda --fstype=ext4 --label platform --align 1024 --size 1024M
part /home --source rootfs --rootfs-dir=${IMAGE_ROOTFS}/home --ondisk hda --fstype=ext4 --label home --align 1024 --size 512M
part /var --source rootfs --rootfs-dir=${IMAGE_ROOTFS}/var --ondisk hda --fstype=ext4 --label aos --align 1024 --size 2048M --fsoptions="defaults,usrjquota=aquota.user,jqfmt=vfsv0"

bootloader --ptable gpt --timeout=5 --append="root=/dev/hda3 ro userdata=/dev/hda5 rootfstype=ext4 console=ttyS0 console=tty0"
